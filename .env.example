# Application
APP_NAME=AutoUploader
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Google API Scopes (space-separated)
# Required scopes: Drive read-only, YouTube upload
GOOGLE_SCOPES=https://www.googleapis.com/auth/drive.readonly https://www.googleapis.com/auth/youtube.upload https://www.googleapis.com/auth/youtube

# Database (SQLite for development, can be changed for production)
DATABASE_URL=sqlite+aiosqlite:///./autouploader.db

# Queue settings
MAX_CONCURRENT_UPLOADS=2
UPLOAD_CHUNK_SIZE=10485760
